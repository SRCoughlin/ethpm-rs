{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "subcommand": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "type": "cargo",
            "subcommand": "check",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cargo test",
            "type": "shell",
            "command": "RUST_BACKTRACE=1 cargo test",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo build no-std",
            "type": "shell",
            "command": "cargo build --features no-std",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}